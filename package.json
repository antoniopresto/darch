{
  "name": "root",
  "private": true,
  "scripts": {
    "dev": "(cd ./packages/site && yarn dev)",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "fix": "lerna run fix",
    "minor-commit": "git add -A && git commit -m 'minor'",
